{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-execute",
    "shell:allow-spawn",
    "shell:allow-stdin-write",
    "shell:allow-kill",
    "shell:allow-open",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    "fs:allow-app-read",
    "fs:allow-app-write",
    "fs:allow-app-read-recursive",
    "fs:allow-app-write-recursive",
    "fs:allow-resource-read",
    "fs:allow-resource-read-recursive",
    "fs:allow-temp-read",
    "fs:allow-temp-write",
    "fs:allow-temp-read-recursive",
    "fs:allow-temp-write-recursive",
    "fs:read-all",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$VIDEO/**" },
        { "path": "$AUDIO/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOCUMENT/**" }
      ]
    }
  ]
}
